[Unit]
Description=Streamlit Demo App
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/path/to/your/main/repo/devin-practice/first-demo
Environment=OPENAI_API_KEY=your_openai_api_key_here
ExecStart=/home/ubuntu/.pyenv/versions/3.12.8/bin/streamlit run app.py --server.port=8501 --server.address=127.0.0.1 --server.headless=true
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
